                <div class="stat-label">Motor RPM</div>
            </div>

            <div class="stat-card fuel">
                <span class="stat-icon">⛽</span>
                <div class="stat-value">@(Model?.YakitSeviyesi ?? 0) %</div>
                <div class="stat-label">Yakıt Seviyesi</div>
            </div>

            <div class="stat-card battery">
                <span class="stat-icon">🔋</span>
                <div class="stat-value">@(Model?.BataryaVoltaji ?? 0) V</div>
                <div class="stat-label">Batarya</div>
            </div>
        </div>

        <!-- Control Panel -->
        <div class="control-panel">
            <div class="control-info">
                <p>⚙️ Jeneratörü uzaktan kontrol edin ve sistem modunu değiştirin</p>
            </div>

            <div class="control-buttons">
                <button id="send_start" class="control-btn btn-start">START</button>
                <button id="send_stop" class="control-btn btn-stop">STOP</button>
                <button id="send_auto" class="control-btn btn-auto">AUTO</button>
                <button id="send_manuel" class="control-btn btn-manual">MANUEL</button>
                <button id="send_test" class="control-btn btn-test">TEST</button>
                <button id="send_acilstop" class="control-btn btn-emergency">ACİL STOP</button>
            </div>
        </div>


        <div class="sistem-alarm">
