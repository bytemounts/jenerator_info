            {
                @foreach (var alert in (List<generator_web.Models.Alert>)ViewBag.Alerts)
                {
                    <div class="alert alert-@alert.Type.ToLower()">
                        <span class="alert-icon">⚠️</span>
                        <span class="alert-message">@alert.Message</span>
                        <span class="alert-time">@alert.CreatedAt.ToString("HH:mm")</span>
                    </div>
                }
            }
            else
            {
                <p>✅ Sistem normal çalışıyor</p>
            }
